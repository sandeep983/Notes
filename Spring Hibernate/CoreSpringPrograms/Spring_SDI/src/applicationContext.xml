<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context.xsd">


	<!-- Define your beans here -->
	<context:property-placeholder location="classpath:sport.properties"/>

    <!-- Define your beans here -->
    
    <!-- Dependency -->
    <bean id="myFortune"
    	class="com.cosmostaker.sdi.RandomFortuneService">
    </bean>
    
    <bean id="myCoach" 
    	class="com.cosmostaker.sdi.TrackCoach">
    	
    	<!-- Constructor Injection -->
    	<constructor-arg ref="myFortune" />
    </bean>
    
    
    <bean id="myCricketCoach" 
    	class="com.cosmostaker.sdi.CricketCoach">
    	
    	<!-- Setter Injection -->
    	<property name="fs" ref="myFortune" />
    	
    	<!-- Literal values Injection -->
    	<property name="emailAddress" value="${cos.email}"/>
    	<property name="team" value="${cos.team}" />
    </bean>
   
</beans>